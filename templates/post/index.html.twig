{# templates/post/index.html.twig #}

<!DOCTYPE html>
<html lang="en">
<head>
   <meta charset="UTF-8">
   <meta name="viewport" content="width=device-width, initial-scale=1.0">
   <title>Posts</title>
   <link rel="stylesheet" href="{{ asset('css/styles.css') }}">
</head>
<body>

<h1>Posts</h1>

<table>
   <thead>
   <tr>
       <th>ID</th>
       <th>Title</th>
       <th>Body</th>
   </tr>
   </thead>
   <tbody>
   {% for post in posts %}
       <tr>
           <td>{{ post.id }}</td>
           <td>{{ post.title }}</td>
           <td>{{ post.body }}</td>
       </tr>
   {% endfor %}
   </tbody>
</table>

</body>
</html>
